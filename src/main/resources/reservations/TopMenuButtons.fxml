<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" style="-fx-background-color: #FFEFD5;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iie.hotelms.controllers.ReservationsTopMenuButtonsController">
   <children>
      <Pane onMouseClicked="#back" prefHeight="0.0" prefWidth="80.0">
