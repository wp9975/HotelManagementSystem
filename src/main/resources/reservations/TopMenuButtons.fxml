<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" style="-fx-background-color: #FFEFD5;" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iie.hotelms.controllers.ReservationsTopMenuButtonsController">
   <children>
      <ImageView fitHeight="50.0" fitWidth="50.0" onMouseClicked="#back">
         <image>
            <Image url="@../../../../../clone/mhotel/src/main/resources/icon/arrow.png" />
         </image>
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </ImageView>
      <ToggleButton mnemonicParsing="false" onAction="#openRestaurant" prefHeight="50.0" prefWidth="130.0" text="Restauracja">
         <HBox.margin>
            <Insets bottom="10.0" right="10.0" top="10.0" />
         </HBox.margin>
         <toggleGroup>
            <ToggleGroup fx:id="toggleButtons" />
         </toggleGroup>
      </ToggleButton>
      <ToggleButton mnemonicParsing="false" onAction="#openListTable" prefHeight="50.0" prefWidth="130.0" text="Stoliki" toggleGroup="$toggleButtons">
         <HBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </ToggleButton>
      <ToggleButton mnemonicParsing="false" onAction="#openMassage" prefHeight="50.0" prefWidth="130.0" text="Masaż" toggleGroup="$toggleButtons">
         <HBox.margin>
            <Insets bottom="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </ToggleButton>
      <ToggleButton mnemonicParsing="false" onAction="#openListMassage" prefHeight="50.0" prefWidth="130.0" text="Rodzaje masażu" toggleGroup="$toggleButtons">
         <HBox.margin>
            <Insets bottom="10.0" right="10.0" top="10.0" />
         </HBox.margin>
      </ToggleButton>
   </children>
</HBox>
