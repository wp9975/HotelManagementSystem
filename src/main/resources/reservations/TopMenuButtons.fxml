            <ImageView fitHeight="50.0" fitWidth="50.0" layoutX="10.0" layoutY="11.0" onMouseClicked="#back">
               <image>
                  <Image url="@../icon/arrow.png" />
               </image>
            </ImageView>
         </children>
      </Pane>
      <ToggleButton mnemonicParsing="false" onAction="#openRestaurant" prefHeight="50.0" prefWidth="130.0" text="Restauracja">
